{
  "manifest_version": 2,
  "name": "4chan Mass Reply",
  "version": "2.0.0",
  "description": "Sneed",
  "homepage_url": "https://github.com/HamletDuFromage/4chan_Mass_Quotes",
  "icons": {
    "48": "icons/janny-48.png",
    "96": "icons/janny-96.png"
  },
  "permissions": [
    "*://*.4channel.org/*",
    "*://*.4chan.org/*",
    "activeTab",
    "clipboardWrite",
    "storage",
    "contextMenus",
    "cookies"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.4chan.org/*", "*://*.4channel.org/*"
      ],
      "js": [
        "kymSpotter.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icons/janny-32.png",
    "default_title": "4chan Mass Quote",
    "default_popup": "popup/chooseMode.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "id@id.com",
      "update_url": "https://raw.githubusercontent.com/HamletDuFromage/4chan-mass-quote/master/updates.json"
    }
  }
}